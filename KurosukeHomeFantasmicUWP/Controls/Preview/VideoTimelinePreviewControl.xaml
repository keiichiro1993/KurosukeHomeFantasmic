<UserControl
    x:Class="KurosukeHomeFantasmicUWP.Controls.Preview.VideoTimelinePreviewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KurosukeHomeFantasmicUWP.Controls.Preview"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Bind ViewModel.Timeline.Name, Mode=OneWay}"/>
        <local:VideoTimelinePreviewChildControl Grid.Row="1"
            CurrentPosition="{x:Bind ViewModel.GlobalViewModel.GlobalCurrentPosition, Mode=OneWay}"
            PlaybackState="{x:Bind ViewModel.GlobalViewModel.GlobalPlaybackState, Mode=OneWay}"
            VideoTimeline="{x:Bind ViewModel.Timeline, Mode=OneWay}"/>
    </Grid>
</UserControl>
