<UserControl
    x:Class="KurosukeHomeFantasmicUWP.Controls.Timeline.Parts.CurrentPositionArrow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KurosukeHomeFantasmicUWP.Controls.Timeline.Parts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Canvas.Left="{x:Bind ViewModel.Left, Mode=OneWay}"
    d:DesignHeight="100"
    d:DesignWidth="20">

    <Grid Width="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Path Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Stroke="DeepSkyBlue" Fill="DeepSkyBlue" Stretch="Fill"  StrokeThickness="3" 
              Data="M 0,50 L 52,100 L 100,50 L 100,0 L 0,0 Z" />
        <Border Grid.Row="1" Grid.Column="1" BorderThickness="1,0,0,0" BorderBrush="DeepSkyBlue"/>
    </Grid>
</UserControl>
