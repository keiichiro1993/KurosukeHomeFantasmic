<UserControl
    x:Class="KurosukeHomeFantasmicUWP.Controls.Timeline.SingleTimeline"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KurosukeHomeFantasmicUWP.Controls.Timeline"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="800">
    <toolkit:DropShadowPanel ShadowOpacity="1" OffsetX="2" OffsetY="2" Color="Black" IsMasked="True"
                             HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                             Height="100">
        <Grid SizeChanged="Grid_SizeChanged">
            <Canvas x:Name="singleTimeline" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                AllowDrop="True" DragOver="singleTimeline_DragOver" Drop="singleTimeline_Drop">
                <Grid x:Name="singleTimelineBackground" Background="{StaticResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Canvas>
        </Grid>
    </toolkit:DropShadowPanel>
</UserControl>
